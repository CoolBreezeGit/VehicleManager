<!DOCTYPE hibernate-configuration PUBLIC
			"//Hibernate/Hibernate Configuration DTD 3.0//EN"
			"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>

	<property name="hibernate.dialect">
		org.hibernate.dialect.MySQL5Dialect
	</property>


	<property name="show_sql">true</property>

	<!-- 自动建表配置 -->
	<property name="hibernate.hbm2ddl.auto">update</property>
	
	<!-- 导入映射文件 -->
	<mapping resource="com/coolbreeze/oa/domain/P_Base.hbm.xml" />
	<mapping resource="com/coolbreeze/oa/domain/User.hbm.xml" />
	<mapping resource="com/coolbreeze/oa/domain/V_Brand.hbm.xml" />
	<mapping resource="com/coolbreeze/oa/domain/V_Configure.hbm.xml" />
	<mapping resource="com/coolbreeze/oa/domain/V_Param.hbm.xml" />
	<mapping resource="com/coolbreeze/oa/domain/V_Type.hbm.xml" />


</session-factory>
</hibernate-configuration>			
		